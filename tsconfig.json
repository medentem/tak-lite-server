{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "migrations/**/*.ts", "knexfile.ts"],
  "exclude": ["node_modules", "dist"]
}

